// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  lastName   String
  email      String   @unique
  birthday   DateTime @default(now())
  password   String
  phone      String
  country_id String
  address    Json     @default("{\"street\": \"\", \"number\": \"\", \"city\": \"\", \"state\": \"\", \"zip\": \"\", \"country\": \"\"}")
  links      Json     @default("{\"icon\": \"\", \"name\": \"\", \"url\": \"\"}")
  biography  String
  job_title  String
  image      String
  lang       String
}
